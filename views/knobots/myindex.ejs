<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>My Robots</h1>

    <% for (let robot of robots){%>
     <% if( currentUser && robot.author.equals(currentUser._id))  {%>

    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(robot.images.length) {%>
                <img class="img-fluid" alt="" src="<%=robot.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= robot.title %> </h5>
                    <p class="card-text"><%= robot.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= robot.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/robots/<%=robot._id%>">View <%=robot.title%></a>
                </div>
            </div>
        </div>
     </div>
     <% }%>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const robots = { features: <%- JSON.stringify(robots) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
